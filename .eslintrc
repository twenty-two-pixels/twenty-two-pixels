{
  "extends": [
    "eslint:all",
    "plugin:jasmine/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "jasmine": true,
    "es6": true
  },
  "globals": {
    "inject": true,
    "cases": true,
    "require": true
  },
  "plugins": [
    "jasmine"
  ],
  "rules": {
    "prefer-arrow-callback": [2],
    "one-var": [2, {
      "var": "always",
      "let": "never",
      "const": "never"
    }],
    "strict": [0],
    "padded-blocks": [0],
    "indent": [2, 2, {
      "VariableDeclarator": 2
    }],
    "quotes": [2, "single"],
    "newline-after-var": [2],
    "init-declarations": [0],
    "prefer-const": [2, {
      "destructuring": "any",
      "ignoreReadBeforeAssign": true
    }],
    "require-jsdoc": [0],
    "func-style": [0],
    "no-ternary": [0],
    "max-len": [2, 120],
    "multiline-ternary": [0],
    "no-process-env": [0],
    "quote-props": [0],
    "object-curly-newline": [0],
    "dot-location": [0],
    "arrow-parens": [0],
    "no-underscore-dangle": [0],
    "space-before-function-paren": [0],
    "object-property-newline": [0],
    "no-sync": [0],
    "no-magic-numbers": [0],
    "array-element-newline": [0],
    "function-paren-newline": [0],
    "id-length": [2, {
      "exceptions": ["i"]
    }],
    "no-plusplus": [2, {
      "allowForLoopAfterthoughts": true
    }],
    "no-mixed-operators": [0],
    "arrow-body-style": [0],
    "max-params": [2, 5],
    "class-methods-use-this": [0],
    "jasmine/no-spec-dupes":	[1, "branch"]
  }
}
