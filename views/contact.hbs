<main class="main-content contact">
  <div class="scroll-content">
    <h3>Get In Touch</h3>
    <p>If you have any questions please contact our head office.</p>
    <p>20-22 Wenlock Road, London, England, N1 7GU<br>
      <a href="tel:08001076304">0800 107 6304</a><br>
      <a href="mailto:info@22px.io?Subject=Hello" target="_top">info@22px.io</a>
    </p>

    <form class="ttp-form validate-form" method="post" role="form">
      {{#if isSuccess}}
        <p class="success-msg">Your message was sent successfully. Someone will get back to you as soon as possible.</p>
      {{/if}}
      {{#if isError}}
        <p class="error-msg">Whoops! Something went wrong. Please try again.</p>
      {{/if}}

      <div class="ttp-wrap-input validate-input" data-validate="Name is required">
        <label for="name" class="ttp-label-input">Your Name</label>
        <input id="name" class="ttp-input" type="text" name="name" placeholder="Enter your name">
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-wrap-input validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <label for="email" class="ttp-label-input">Email</label>
        <input id="email" class="ttp-input" type="text" name="email" placeholder="Enter your email addess">
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-wrap-input validate-input" data-validate="Message is required">
        <label for="message" class="ttp-label-input">Message</label>
        <textarea id="message" class="ttp-input" name="message" placeholder="Your message here..."></textarea>
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-container-contact-form-btn">
        <button>Submit</button>
      </div>
    </form>
  </div>
</main>
