<main class="main-content">
  <div class="scroll-content">
    <h3>Contact</h3>
    {{#if isSuccess}}
      <p>Your message was sent successfully. Someone will get back to you as soon as possible.</p>
    {{/if}}
    {{#if isError}}
      <p>Whoops! Something went wrong. Please try again.</p>
    {{/if}}
    <form class="ttp-form validate-form" method="post" role="form">
      <div class="ttp-wrap-input ttp-wrap-input validate-input" data-validate="Name is required">
        <label for="name" class="ttp-label-input">Your Name</label>
        <input class="ttp-input" type="text" name="name" placeholder="Enter your name">
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-wrap-input ttp-wrap-input validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <label for="email" class="ttp-label-input">Email</label>
        <input class="ttp-input" type="text" name="email" placeholder="Enter your email addess">
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-wrap-input validate-input" data-validate="Message is required">
        <label for="message" class="ttp-label-input">Message</label>
        <textarea class="ttp-input" name="message" placeholder="Your message here..."></textarea>
        <span class="ttp-focus-input"></span>
      </div>

      <div class="ttp-container-contact-form-btn">
        <button>Submit</button>
      </div>
    </form>
  </div>
</main>
